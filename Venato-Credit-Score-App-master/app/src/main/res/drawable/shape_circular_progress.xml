<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"

    android:fromDegrees="0"
    android:toDegrees="0">

    <shape
        android:innerRadiusRatio="3.5"
        android:shape="ring"
        android:thickness="20dp"
        android:useLevel="true">

        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:angle="0"
            android:endColor="@color/colorProgressEnd"
            android:centerColor="@color/colorProgressCenter"
            android:startColor="@color/colorProgressStart"/>
    </shape>
</rotate>